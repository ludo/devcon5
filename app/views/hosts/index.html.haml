%h1.heading
  = "Hosts"

.actions-bar
  %div{:class => "left search"}
    - form_for @search do |f|
      = f.label "Find:"
      = f.text_field :name
      = f.submit("Search")
  .right
    = will_paginate @collection, :prev_label => "&laquo; Back", :next_label => "Next &raquo;"
  .clear                                                                                     
  
%p.actions
  = link_to 'New Host', new_host_path

= render :partial => "hosts", :object => @hosts

= will_paginate @collection, :prev_label => "&laquo; Back", :next_label => "Next &raquo;"
 
