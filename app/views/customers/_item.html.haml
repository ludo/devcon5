- content_tag_for(:tr, customer, :class => cycle(:odd, :even)) do
  %td.name= h customer.try(:name)
  %td.email= h customer.try(:email)
  %td.actions
    = link_to 'Show', customer_path(customer)
    |
    = link_to 'Edit', edit_customer_path(customer)
    |
    = link_to 'Destroy', customer, :confirm => 'Are you sure?', :method => :delete