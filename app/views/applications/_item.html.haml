- content_tag_for(:tr, application, :class => cycle(:odd, :even)) do
  %td.name= h application.try(:name)
  %td.actions
    = link_to 'Show', customer_application_path(@customer, application)
    = link_to 'Edit', edit_customer_application_path(@customer, application)
    = link_to 'Destroy', customer_application_path(@customer, application), :confirm => 'Are you sure?', :method => :delete